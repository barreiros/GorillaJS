# Este archivo se tiene que ejecutar desde la ra√≠z de GorillaJS.
# docker build -t gorillajs/postgresql . -f templates/common/dockerfile-postgresql

FROM ubuntu:14.04

RUN apt-get update && apt-get -y install postgresql postgresql-contrib supervisor && apt-get autoremove

COPY templates/common/postgresql-supervisord.conf /etc/supervisor/conf.d/supervisord.conf

CMD ["/usr/bin/supervisord"]
